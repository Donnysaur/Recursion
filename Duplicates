#include <iostream>
using namespace std;

//Function of the the no. that appear many time(s)
void countFrequency(int arr[], int n, int index = 0) {
	if (index >= n)
		return;

	int count = 1;
	while (index + count < n && arr[index] == arr[index + count]) {
		count++;
	}
	cout << arr[index] << " appears " << count << " time(s)" << endl;

	countFrequency(arr, n, index + count);
}

int main() {
	int size;

	//size of the array
	cout << "Enter the size of the array: ";
	cin >> size;

	if (size <= 0) {
		cout << "Invalid array size!" << endl;
		return 1;
	}

	//display of the array containing the elements
	int* arr = new int[size];
	cout << "Enter " << size << " sorted elements: " << endl;
	for (int i = 0; i < size; ++i) {
		cin >> arr[i];
	}
	cout << size << " Frequencies of elements:" << endl;
	countFrequency(arr, size);

	delete[] arr;
	return 0;
}

/*
if user input the same number but in separate it should still count as how many times
for example user input size of the array: 7
in the array: 5 6 5 5 7 7 3

5 appears 3 time(s)
6 appears 1 time(s)
7 appears 2 time(s)
3 appears 1 time(s)
*/
